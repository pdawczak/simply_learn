<h3>
  <%= @book.title %> <br/>
  <small><%= @book.isbn %></small>
</h3>

<p>
  <div class="row">
    <div class="col-sm-12 col-md-3">
      <div class="thumbnail" style="margin-right: 20px; width: 142px;">
        <img src="<%= @book.image_url %>" alt="<%= @book.title %>">
      </div>
    </div>
    <div class="col-sm-12 col-md-9">
      <ul class="list-group">
        <%= for book_copy <- @book.book_copies do %>
          <li class="list-group-item">
            <%= link book_copy.code, to: book_book_copy_path(@conn, :show, @book, book_copy) %>
          </li>
        <% end %>
      </ul>
      <%= link "Add copy", to: book_book_copy_path(@conn, :new, @book) %>
    </div>
  </div>
  <%= format_description(@book) %>
</p>

<%= link "Back to list of books", to: book_path(@conn, :index) %>
